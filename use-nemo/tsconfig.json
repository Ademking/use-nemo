{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "types": ["node", "vite/client"]
  },
  "include": ["*.ts"],
  "exclude": ["dist", "node_modules"]
}
